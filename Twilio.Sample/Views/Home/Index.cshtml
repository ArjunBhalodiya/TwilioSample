@model Twilio.Sample.Models.SMS
@{
    ViewData["Title"] = "Home Page";
}

<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="" method="post">
            <span class="text-info">@ViewBag.Message</span>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Phone No:</label>
                <input asp-for="PhoneNumber" placeholder="+91-000-000-0000" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label">Message:</label>
                <input asp-for="Body" class="form-control" />
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

